nome = str(input('Digite seu nome completo: ')).strip() #.split() excluir os espaços antes e depois
print('Seu nome em letras maiúsculas é {}'.format(nome.upper()))
print('Seu nome em letras minúsculas é {}'.format(nome.lower()))
print('Seu nome tem ao todo {} letras'.format(len(nome)-nome.count(' '))) #Ao contar a quantidade de letras usa-se - nome.count(' ')
#print('Seu primeiro nome tem {}'.format(nome.find(' ')))
separa = nome.split()
print(separa)
print('O seu primeiro nome é {}'.format(separa[0], len(separa[0])))
