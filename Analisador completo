somaidade = 0
média = 0
for c in range(1,5):
    print('----- {}º Pessoa -----'.format(c))
    nome = str(input('Nome: ')).strip()
    idade = int(input('Idade: '))
    sexo = str(input('Sexo [M/F]: '))
    somaidade += idade

médiaidade = somaidade / 4
print('A média de idade do grupo é de {} anos.'.format(médiaidade))
