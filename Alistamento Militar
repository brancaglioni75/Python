from datetime import date #Para esse exercício importamos a date da biblioteca datetime
atual = date.today().year #date.today().year ou date.today().month
nasc = int(input('Data de nascimento: '))
anos = atual - nasc
print('Quem nasceu no ano {} tem {} no ano {}'.format(nasc, anos, atual))
if anos == 18:
    print('Você deve se alistar IMEDIATAMENTE')
elif anos < 18:
    saldo = 18 - anos
    print('Ainda falta(m) {} anos para se alistar'.format(saldo))
else:
    saldo = anos - 18
    print('Você já deveria ter se alistado')
